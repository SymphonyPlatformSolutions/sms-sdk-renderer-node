<span style="display: flex;
    flex-direction: row;
    border: 1px solid #C3D5F0;
    border-radius: 2px;
    background-color: #E0EBFC;
    color: #19376B;
    padding: 1px 8px;
    margin: 5px;
    max-height: 24px;"
>
  {{#if prefix}}
    <p style="margin: 0 5px 0 0; font-size: 12px; line-height: 18px">
      {{prefix}}
    </p>
  {{/if}}
  {{#if suffix}}
    <p style="margin: 0;">
      <b>{{suffix}}</b>
    </p>
  {{/if}}
</span>
